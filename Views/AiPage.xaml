<Page x:Class="REToolBox.Views.AiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid>
        <Border x:Name="ConfigPanel" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                Padding="24" CornerRadius="8" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderThickness="1" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Visibility="Collapsed">
            <StackPanel Width="400">
                <TextBlock Text="AI 配置" 
                           FontSize="18" FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                <TextBox x:Name="ApiKeyTextBox" 
                         Header="API 密钥"
                         PlaceholderText="输入 Kimi API Key"
                         Margin="0,0,0,15" Height="60"/>
                <ComboBox x:Name="ModelComboBox" 
                          Header="选择模型" 
                          Margin="0,0,0,20" Height="60" MinWidth="200" HorizontalAlignment="Left">
                    <ComboBoxItem Content="moonshot-v1-8k" IsSelected="True"/>
                    <ComboBoxItem Content="moonshot-v1-32k"/>
                    <ComboBoxItem Content="moonshot-v1-128k"/>
                </ComboBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="使用默认" 
                            Click="UseDefaultApiKey_Click"
                            Margin="0,0,10,0"
                            Height="35" 
                            Style="{ThemeResource AccentButtonStyle}"/>
                    <Button Content="保存配置" 
                            Click="SaveConfig_Click"
                            Height="35" 
                            MinWidth="100"
                            Style="{ThemeResource AccentButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Grid x:Name="ChatPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" 
                        HorizontalAlignment="Right" Margin="0,5,10,5">
                <Button x:Name="SettingsButton" Content="&#xE115;" 
                        Click="SettingsButton_Click"
                        Background="Transparent" BorderThickness="0"
                        FontFamily="Segoe Fluent Icons" FontSize="16"/>
            </StackPanel>
            <ListView x:Name="MessageList" Grid.Row="1"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,8">
                            <TextBlock Text="{Binding Sender}" 
                                       FontWeight="Bold"
                                       Foreground="{Binding SenderColor}"
                                       Margin="5,0"/>
                            <Border Background="{Binding BubbleBackground}" 
                                    CornerRadius="8" Padding="12,8"
                                    Margin="5,5">
                                <TextBlock Text="{Binding Content}" 
                                           TextWrapping="Wrap"
                                           TextAlignment="Left"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="2" Padding="15" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1,1,1,0"
                  CornerRadius="6,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InputBox" 
                         PlaceholderText="输入问题..." 
                         Height="40" VerticalAlignment="Center"
                         KeyDown="InputBox_KeyDown"
                         BorderThickness="1"
                         BorderBrush="{ThemeResource TextControlBorderBrush}"
                         CornerRadius="4"/>
                <Button x:Name="SendButton" Grid.Column="1" Content="发送" 
                        Click="SendButton_Click"
                        Margin="15,0,0,0"
                        MinWidth="80" Height="40"
                        Style="{ThemeResource AccentButtonStyle}"
                        CornerRadius="4"/>
            </Grid>
        </Grid>
    </Grid>
</Page>