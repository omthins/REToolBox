<Page
    x:Class="REToolBox.Views.JsqPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:REToolBox.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20" Spacing="10">
            <TextBlock Text="本地网页部署工具" FontSize="24" FontWeight="Bold" Foreground="White"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:Name="SelectFolderButton" Content="选择文件夹" Click="SelectFolderButton_Click"/>
                <Button x:Name="SelectHtmlButton" Content="选择HTML文件" Click="SelectHtmlButton_Click"/>
                <Button x:Name="StopAllButton" Content="停止所有服务" Click="StopAllButton_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <ListView x:Name="DeployList" Grid.Row="1" Margin="20,0,20,20" Background="Transparent" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding Path}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Url}" FontSize="12" Foreground="LightBlue" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                            <Button Content="查看" Click="ViewItemButton_Click" Tag="{Binding}"/>
                            <Button Content="停止" Click="StopItemButton_Click" Tag="{Binding}" Background="DarkRed"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>