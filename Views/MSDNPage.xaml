<Page x:Class="REToolBox.Views.MSDNPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">
    <Grid Background="Transparent">
        <ScrollViewer Margin="24" Padding="0,0,0,80">
            <StackPanel>
                <TextBlock Text="MSDN 系统库" Style="{ThemeResource TitleTextBlockStyle}" />
                <Image Source="ms-appx:///Assets/MSDNLogo.png" Width="120" Height="120" Margin="0,10" />
                <TextBlock Text="MSDN 系统库是第三方.提供的操作系统和开发工具下载平台，提供多种系统镜像。" Margin="0,10" />
                <TextBlock Text="功能特点：" FontWeight="Bold" Margin="0,10" />
                <TextBlock Text="• 官方原版镜像\n• 多种系统版本\n• 支持企业用户\n• 安全认证下载" Margin="0,5" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,24,24">
            <Button Content="前往 MSDN" Click="OpenMSDN" Style="{ThemeResource AccentButtonStyle}" Margin="0,0,12,0"/>
            <Button Content="了解更多" Click="OpenMSDN" Style="{ThemeResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>