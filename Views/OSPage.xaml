<Page x:Class="REToolBox.Views.OSPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      xmlns:local="using:REToolBox.Views"
      Background="Transparent">
    <Grid ColumnDefinitions="Auto,*">
        <controls:NavigationView 
            x:Name="NavView"
            Grid.Column="0"
            PaneDisplayMode="Left"
            IsPaneOpen="True"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            IsBackButtonVisible="Collapsed"
            PaneTitle="操作系统"
            SelectionChanged="NavView_SelectionChanged"
            CompactModeThresholdWidth="2000">

            <controls:NavigationView.MenuItems>
                <controls:NavigationViewItem x:Name="Win11Parent" Icon="Globe" Content="Windows 11" Tag="Win11InfoPage" IsSelected="True"/>
                <controls:NavigationViewItem x:Name="Win10Parent" Icon="Globe" Content="Windows 10" Tag="Win10InfoPage"/>
                <controls:NavigationViewItem x:Name="Win8_1Parent" Icon="Globe" Content="Windows 8.1" Tag="Win81InfoPage"/>
                <controls:NavigationViewItem x:Name="Win7Parent" Icon="Globe" Content="Windows 7" Tag="Win7InfoPage"/>
            </controls:NavigationView.MenuItems>

            <controls:NavigationView.FooterMenuItems>
                <controls:NavigationViewItem Icon="Library" Content="MSDN系统库" Tag="MSDNPage"/>
            </controls:NavigationView.FooterMenuItems>

            <controls:NavigationView.PaneFooter>
                <Grid x:Name="DefaultPlaceholder" Margin="0,20,0,10" Padding="12">
                    <TextBlock 
                        Text=""
                        Style="{ThemeResource BodyTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                        MaxWidth="160"/>
                </Grid>
            </controls:NavigationView.PaneFooter>
        </controls:NavigationView>

        <Frame x:Name="ContentFrame" Grid.Column="1"/>
    </Grid>
</Page>