<!-- BzipPage.xaml -->
<Page
    x:Class="REToolBox.Views.BzipPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:REToolBox.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- 主内容区域 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题和说明 -->
            <StackPanel Grid.Row="0" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,20">
                <TextBlock Text="窗口管理工具" 
                          FontSize="24" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="拖动光标到目标窗口进行选择" 
                          FontSize="14"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- 光标拖动区域 -->
            <Grid Grid.Row="1" 
                  x:Name="MainContainer"
                  Background="Transparent">

                <!-- 光标 -->
                <Grid x:Name="CursorContainer"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      PointerPressed="CursorContainer_PointerPressed"
                      PointerMoved="CursorContainer_PointerMoved"
                      PointerReleased="CursorContainer_PointerReleased"
                      PointerCaptureLost="CursorContainer_PointerCaptureLost">

                    <!-- 瞄准光标 -->
                    <Ellipse Width="40" Height="40" 
                            Stroke="Red" 
                            StrokeThickness="2"/>
                    <Line X1="20" Y1="0" X2="20" Y2="40" 
                         Stroke="Red" 
                         StrokeThickness="2"/>
                    <Line X1="0" Y1="20" X2="40" Y2="20" 
                         Stroke="Red" 
                         StrokeThickness="2"/>
                    <Ellipse Width="8" Height="8" 
                            Fill="Red"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- 选中窗口提示 -->
                <Border x:Name="SelectionIndicator"
                        Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                        BorderBrush="Red"
                        BorderThickness="2"
                        CornerRadius="4"
                        Visibility="Collapsed">
                    <StackPanel Margin="10">
                        <TextBlock x:Name="WindowTitleText" 
                                  Text="选中的窗口"
                                  FontWeight="Bold"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 工具面板 -->
            <Grid x:Name="ToolsPanel" 
                  Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,50"
                  Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource SystemControlForegroundChromeHighBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Visibility="Collapsed"
                  Padding="15">
                <StackPanel>
                    <TextBlock Text="窗口管理工具" 
                              FontWeight="Bold" 
                              FontSize="16"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center">
                        <Button Content="全屏" 
                                Click="FullScreenButton_Click"
                                Margin="5"
                                MinWidth="80"/>

                        <Button Content="最小化" 
                                Click="MinimizeButton_Click"
                                Margin="5"
                                MinWidth="80"/>

                        <Button Content="最大化" 
                                Click="MaximizeButton_Click"
                                Margin="5"
                                MinWidth="80"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0">
                        <Button Content="关闭" 
                                Click="CloseButton_Click"
                                Margin="5"
                                MinWidth="80"/>

                        <Button Content="置顶" 
                                Click="TopmostButton_Click"
                                Margin="5"
                                MinWidth="80"/>

                        <Button Content="取消" 
                                Click="CancelButton_Click"
                                Margin="5"
                                MinWidth="80"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 拖动限制遮罩 -->
        <Grid x:Name="DragOverlay" 
              Background="Transparent" 
              Visibility="Collapsed"
              PointerMoved="DragOverlay_PointerMoved"
              PointerReleased="DragOverlay_PointerReleased"/>
    </Grid>
</Page>