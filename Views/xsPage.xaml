<Page
    x:Class="REToolBox.Views.xsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">
    <ScrollViewer HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden">
        <Grid HorizontalAlignment="Center">
            <Rectangle Fill="#AA333333" Opacity="0.7"/>
            <StackPanel Margin="40" Background="#202020" Padding="20" 
                        CornerRadius="8">
                <TextBlock Text="文件分割工具" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="FilePathText" Text="未选择文件" VerticalAlignment="Center" 
                              Margin="0,0,10,0" TextWrapping="Wrap"/>
                    <Button x:Name="SelectFileBtn" Content="选择文件" Click="SelectFileBtn_Click" 
                            Grid.Column="1" Width="100"/>
                </Grid>
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="OutputPathText" Text="未选择输出位置" VerticalAlignment="Center" 
                              Margin="0,0,10,0" TextWrapping="Wrap"/>
                    <Button x:Name="SelectOutputBtn" Content="选择输出位置" Click="SelectOutputBtn_Click" 
                            Grid.Column="1" Width="120"/>
                </Grid>
                <ComboBox x:Name="EncodingComboBox" Header="编码检测" PlaceholderText="自动检测" Margin="0,15">
                    <x:String>UTF-8</x:String>
                    <x:String>UTF-16</x:String>
                    <x:String>GB2312</x:String>
                    <x:String>Big5</x:String>
                </ComboBox>
                <ComboBox x:Name="SplitMethodCombo" Header="分割方法" SelectedIndex="0" Margin="0,15">
                    <x:String>按字符数</x:String>
                    <x:String>按行数</x:String>
                    <x:String>按份数</x:String>
                    <x:String>按正则表达式</x:String>
                </ComboBox>
                <TextBox x:Name="ParameterInput" Header="分割参数" PlaceholderText="输入参数值" Margin="0,0,0,15"/>
                <StackPanel Margin="0,10">
                    <ProgressBar x:Name="ProgressBar" Height="20" Value="0" Minimum="0" Maximum="100"/>
                    <TextBlock x:Name="ProgressText" HorizontalAlignment="Center" Margin="0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,15">
                    <Button x:Name="ExecuteBtn" Content="执行分割" Width="120" Click="ExecuteBtn_Click"/>
                    <Button x:Name="CancelBtn" Content="取消操作" Width="120" Click="CancelBtn_Click" IsEnabled="False"/>
                </StackPanel>
                <TextBlock x:Name="StatusText" HorizontalAlignment="Center" Margin="0,10"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>